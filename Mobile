  <script>
    // Mobile menu
    const menuBtn = document.getElementById('menuBtn');
    const primaryNav = document.getElementById('primaryNav');
    menuBtn.addEventListener('click', () => {
      const isOpen = primaryNav.classList.toggle('open');
      menuBtn.setAttribute('aria-expanded', String(isOpen));
    });

    // Modal helpers
    const modal = document.getElementById('appointment-form');
    const confirmPopup = document.getElementById('confirmation-popup');
    const formElement = document.getElementById('inspection-form');

    function openForm(){ modal.style.display = 'block'; document.body.style.overflow = 'hidden'; }
    function closeForm(){ modal.style.display = 'none'; document.body.style.overflow = ''; }
    function closePopup(){ confirmPopup.style.display = 'none'; }

    // Close modal on backdrop click or Esc
    modal.addEventListener('click', (e)=>{ if(e.target === modal) closeForm(); });
    confirmPopup.addEventListener('click', (e)=>{ if(e.target === confirmPopup) closePopup(); });
    window.addEventListener('keydown', (e)=>{ if(e.key === 'Escape'){ closeForm(); closePopup(); }});

    // Form submit -> Formspree + confirmation
    if (formElement) {
      formElement.addEventListener('submit', async (event) => {
        event.preventDefault();
        const formData = new FormData(formElement);
        try{
          const res = await fetch(formElement.action, { method:'POST', body:formData, headers:{ 'Accept':'application/json' }});
          if(res.ok){
            closeForm();
            confirmPopup.style.display = 'block';
            formElement.reset();
          }else{
            alert("There was a problem submitting the form. Please try again later.");
          }
        }catch(err){
          alert("There was an error sending your request.");
          console.error(err);
        }
      });
    }

    // Logo resize/move when reaching Services
    const logo = document.getElementById('main-logo');
    const services = document.getElementById('services');
    function onScroll(){
      const triggerY = services.offsetTop - (parseInt(getComputedStyle(document.documentElement).getPropertyValue('--nav-h')) + 16);
      if (window.scrollY >= triggerY) logo.classList.add('logo-fixed-small');
      else logo.classList.remove('logo-fixed-small');
    }
    window.addEventListener('scroll', onScroll, { passive:true });
    onScroll(); // run once on load
  </script>
</body>
